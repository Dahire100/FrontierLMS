{
  "buildCommand": "cd frontend && npm run build",
  "installCommand": "npm run install:all",
  "framework": "nextjs",
  "outputDirectory": "frontend/.next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/backend/uploads/:path*"
    }
  ],
  "functions": {
    "backend/server.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 15
    }
  }
}